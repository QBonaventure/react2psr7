{
    "name": "phly/react2psr7",
    "type": "library",
    "homepage": "https://github.com/phly/react2psr7",
    "license": "BSD-2-CLAUSE",
    "keywords": [
        "http",
        "middleware",
        "psr",
        "psr-7",
        "react"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "require": {
        "php": "^5.5 || ^7.0",
        "container-interop/container-interop": "^1.1",
        "psr/http-message": "^1.0",
        "react/react": "master",
        "zendframework/zend-diactoros": "^1.3"
    },
    "require-dev": {
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "React2Psr7\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "React2Psr7Test\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "coveralls": "coveralls",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
